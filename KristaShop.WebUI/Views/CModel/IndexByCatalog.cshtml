@model CatalogViewModel
@{
    ViewData["Title"] = $"Модели - каталог {Model.Name}";
}

@section Styles {
    <link href="https://cdn.datatables.net/rowreorder/1.2.6/css/rowReorder.bootstrap4.min.css" rel="stylesheet" />
}

<div class="row mb-3">
    <div class="col-auto mr-auto"></div>
    <div class="col-auto">
        <a asp-action="Index" asp-controller="Catalog" class="btn btn-sm btn-primary mr-1" type="button"><i class="fas fa-arrow-circle-left"></i> Назад</a>
    </div>
</div>
<input type="hidden" asp-for="Id" />

<div class="modal fade" id="reorder-model-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Упорядочить модели</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="NomId" name="NomId" />
                <div class="form-group">
                    <label for="OrderNum" class="control-label">Порядковый номер</label>
                    <input type="number" class="form-control" id="OrderNum">

                </div>
                <div class="form-group text-center">
                    <input type="button" onclick="ReorderModel()" class="btn btn-success btn-sm btn-block" value="Сохранить">
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_SearchCModelPartial" />

<div class="p-4 mt-3 bg-white rounded shadow">
    <div class="col-12 table-responsive">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Порядок</th>
                    <th>Фото</th>
                    <th>Артикул</th>
                    <th>Наименование</th>
                    <th>Цвет</th>
                    <th>Размер</th>
                    <th>Каталог</th>
                    <th>Категория</th>
                    <th>Видимость</th>
                    <th>Действия</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/rowreorder/1.2.6/js/dataTables.rowReorder.min.js" type="text/javascript"></script>
    <script src="~/js/CModel/IndexByCatalog.js" asp-append-version="true" type="text/javascript"></script>
}
