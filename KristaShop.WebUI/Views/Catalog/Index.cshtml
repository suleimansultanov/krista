@{
    ViewData["Title"] = "Каталоги - Список";
}


@section Styles {
    <link href="https://cdn.datatables.net/rowreorder/1.2.6/css/rowReorder.bootstrap4.min.css" rel="stylesheet" />
}

<div class="col-auto">
    <a asp-action="Create">Новая запись</a>
</div>
<hr />
<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Порядок</th>
                <th>Наименование</th>
                <th>ЧПУ</th>
                <th>Форма заказа</th>
                <th>Видимость</th>
                <th>Действия</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/rowreorder/1.2.6/js/dataTables.rowReorder.min.js" type="text/javascript"></script>
    <script src="~/js/Catalog/Index.js" asp-append-version="true" type="text/javascript"></script>
}